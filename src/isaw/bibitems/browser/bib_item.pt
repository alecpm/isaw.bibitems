<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="kcrw.site">
<body>
  <metal:core fill-slot="main">
    <h1 class="documentFirstHeading" tal:content="context/title|nothing">Title</h1>
    <div class="FormattedCitation"
         tal:condition="context/formatted_citation|nothing"
         tal:content="structure context/formatted_citation">
         Formatted Citation
    </div>
    <div class="AccessLinks" tal:condition="python:getattr(context, 'access_uri', None) or getattr(context, 'alternate_uri', None)">
      <span class="label">read:</span>
      <a class="AccessButton button" tal:condition="context/access_uri|nothing" tal:attributes="href context/access_url"
         tal:content="python:'.'.join(context.access_uri.split('://')[1].split('/')[0].split('.')[-2:])">jstor.org</a>
      <a class="AccessButton button" tal:condition="context/alternate_uri|nothing" tal:attributes="href context/alternat_uri"
         tal:content="python:'.'.join(context.alternate_uri.split('://')[1].split('/')[0].split('.')[-2:])">jstor.org</a>
    </div>
    <div class="BibliographicLinks" tal:condition="context/bibliographic_uri|nothing">
      <span class="label">bibliographic record:</span>
      <a class="AccessButton button" tal:attributes="href context/bibliographic_uri"
         tal:content="python:'.'.join(context.bibliographic_uri.split('://')[1].split('/')[0].split('.')[-2:])">jstor.org</a>
    </div>
  </metal:core>
</body>
</html>
